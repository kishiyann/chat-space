.chat-space-side
  .side-header
    .side-header__logo
      %p.side-header__logo__user-name 
        = current_user.name
      .side-header__logo__menu
        .side-header__logo__menu__pen
        = link_to new_group_path do
          = icon('far', 'edit')
        .side-header__logo__menu__gear
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: 'icon')
  .groups
    - current_user.groups.each do |group|
      .group
        = link_to '#' do
          .group__name
            = group.name
